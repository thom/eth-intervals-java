#!/bin/bash

JAVA_OPTS="-Xmx2048M"
SIZES2="SizeA SizeB SizeC"
SIZES3="SizeA SizeB"
MYDIR=$(dirname $0)
DIR=$(cd $MYDIR; pwd)
JGF=$(cd $MYDIR/..; pwd)

$DIR/benchmark-init $1

if [ -z "$NS" ]
then
	NS="8 -1"
fi

if [ -z "$ITERFAST" ]
then
	ITERFAST=6
fi

if [ -z "$ITERSLOW" ]
then
	ITERSLOW=3
fi

echo "SIZES2=${SIZES2}"
echo "SIZES3=${SIZES3}"
echo "ITERFAST=${ITERFAST}"
echo "ITERSLOW=${ITERSLOW}"
echo "NS=${NS}"
echo

for B in Crypt LUFact SOR
do 
	for N in ${NS}
	do 
		$JGF/jgf-benchmark jgfmt.section2.JGF${B}Bench $N $ITERFAST "$SIZES2" "$JAVA_OPTS"
	done
done

for B in Series
do 
	for N in ${NS}
	do 
		$JGF/jgf-benchmark jgfmt.section2.JGF${B}Bench $N $ITERSLOW "$SIZES3" "$JAVA_OPTS"
	done
done


for B in MolDyn MonteCarlo RayTracer
do
	for N in ${NS}
	do 
		$JGF/jgf-benchmark jgfmt.section3.JGF${B}Bench $N "$ITERFAST" "$SIZES3" "$JAVA_OPTS"
	done
done
