#!/bin/bash

MYDIR=$(dirname $0)
DIR=$(cd $MYDIR; pwd)
SCRIPTS=$DIR
SIZES="500 1000 1500"
TMPDIR=/tmp
PROF=$TMPDIR/prof
COUNT=$TMPDIR/count

$DIR/benchmark-init $1

if [ -z "$PATTERN" ]
then
	PATTERN="qb gg"
fi

if [ -z "$ITER" ]
then
	ITER="5"
fi

for k in serial st fg b p sp i 
do 
	rm -f $PROF
	for t in $PATTERN
	do
		rm -f $COUNT
		for n in $(seq 1 $ITER)
		do 
			echo Testing kind=$k test=$t trial=$n tile_size=100
			java ${JAVA_OPTS} ch.ethz.intervals.TestGameOfLife $k 100 100 $t 150 155 1 1000 1000 1>> $PROF 2>> $COUNT
		done
		$SCRIPTS/counts $COUNT $SCRIPTS
	done

	echo "Runtimes:"
	$SCRIPTS/re '^ch.ethz.intervals.TestGameOfLife\$.*: ([0-9]*.[0-9]*)' '$1' $PROF > $TMPDIR/prof-num
	$SCRIPTS/columnize $PATTERN < $TMPDIR/prof-num
	echo
done
